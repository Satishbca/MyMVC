
<a asp-controller="SoapStor" asp-action="Insert"Edit" class="btn btn-primary">Create</a>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Soap Name</th>
            <th>Quntity</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
              <td>@item.Id</td>
                <td>@item.SoapName</td>
                <td>@item.Quntity</td>
                <td>@item.Price</td>
                <td>
                    
                    <a asp-controller="SoapStor" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a>
                    <a asp-controller="SoapStor" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                </td>

            </tr>
            
        }

    </tbody>
</table>